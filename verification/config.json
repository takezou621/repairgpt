{
  "verification_config": {
    "project_name": "RepairGPT",
    "verification_version": "1.0.0",
    "automation_components": {
      "claude_code": {
        "enabled": true,
        "description": "Claude Code による自動ブランチ作成・実装",
        "verification_method": "branch_existence_check",
        "expected_branch_pattern": "claude/issue-{number}-{timestamp}",
        "timeout_seconds": 30
      },
      "night_auto_pr": {
        "enabled": false,
        "description": "夜間自動PR作成システム",
        "verification_method": "github_actions_check",
        "required_workflow": ".github/workflows/night-automation.yml",
        "schedule": "0 2 * * *",
        "timeout_seconds": 60
      },
      "night_auto_merge": {
        "enabled": false,
        "description": "夜間自動マージシステム", 
        "verification_method": "merge_conditions_check",
        "safety_requirements": [
          "tests_passing",
          "review_completed",
          "no_conflicts"
        ],
        "timeout_seconds": 120
      },
      "issue_auto_close": {
        "enabled": false,
        "description": "Issue自動クローズバッチ処理",
        "verification_method": "batch_schedule_check",
        "close_conditions": [
          "pr_merged",
          "branch_deleted",
          "manual_approval"
        ],
        "schedule": "0 3 * * *",
        "timeout_seconds": 45
      },
      "branch_auto_delete": {
        "enabled": false,
        "description": "ブランチ自動削除クリーンアップ",
        "verification_method": "cleanup_rules_check",
        "protection_rules": [
          "protect_main",
          "protect_develop", 
          "protect_active_branches",
          "protect_tagged_branches"
        ],
        "deletion_delay_hours": 24,
        "timeout_seconds": 30
      }
    },
    "reporting": {
      "output_format": "markdown",
      "include_timestamps": true,
      "include_duration": true,
      "include_details": true,
      "honest_reporting": true,
      "no_false_success": true
    },
    "safety": {
      "fail_fast": false,
      "dry_run_mode": true,
      "confirmation_required": true,
      "backup_before_changes": true
    }
  },
  "github_integration": {
    "repository": "takezou621/repairgpt",
    "main_branch": "main",
    "issue_reference": "#36",
    "automation_label": "automation",
    "verification_label": "verification"
  },
  "notification": {
    "success_notification": true,
    "failure_notification": true,
    "summary_report": true,
    "detailed_logs": true
  }
}