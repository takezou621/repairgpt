# RepairGPT Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=repairgpt
POSTGRES_USER=repairgpt
POSTGRES_PASSWORD=secure_password_change_me
POSTGRES_PORT=5432
DATABASE_URL=postgresql://repairgpt:secure_password_change_me@postgres:5432/repairgpt

# For development with SQLite (uncomment to use instead of PostgreSQL)
# DATABASE_URL=sqlite:///./repairgpt.db

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=secure_redis_password
REDIS_PORT=6379
REDIS_URL=redis://:secure_redis_password@redis:6379/0

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# OpenAI API Key for GPT-4 and Vision API
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key for Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# iFixit API Key for repair procedures
IFIXIT_API_KEY=your-ifixit-api-key-here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Secret key for JWT tokens and encryption (generate a secure random string)
SECRET_KEY=generate_a_secure_secret_key_here

# Debug mode (set to false in production)
DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Port configurations
API_PORT=8000
UI_PORT=8501

# CORS settings (comma-separated list)
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Hot reload for development
RELOAD=true

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Number of worker processes (for production)
WORKERS=4

# Maximum number of requests per worker
MAX_REQUESTS=1000

# Timeout settings
TIMEOUT=30